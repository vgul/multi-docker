

{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [

    { "name": "client",
      "image": "banderlogic/multi-client",
      "hostname": "client",
      "essential": false
    },
    { "name": "server",
      "image": "banderlogic/multi-server",
      "hostname": "api",
      "essential": false
    },
    { "name": "worker",
      "image": "banderlogic/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    { "name": "nginx",
      "image": "banderlogic/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [ {
        "hostPort": 80,
        "containerPort": 80 } ],

      "links": [ "client", "server" ]
    }
  ]
}

